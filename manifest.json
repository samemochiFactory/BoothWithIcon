{
    "manifest_version": 3,
    "name": "BoothAssetsManager",
    "version": "0.1.0",
    "description": "Boothの商品を保存するときにショップ情報やリンクを含めて管理しやすくします．",
    "permissions": [
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "Click me!"
    },
    "icons": {
        "16": "static/icons/icon.png",
        "48": "static/icons/icon.png",
        "128": "static/icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://accounts.booth.pm/library*"
            ],
            "js": [
                "src/content.js"
            ]
        }
    ],
    "content-security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' https://cdn.jsdelivr.net; "
    },
    "web_accessible_resources": [
        {
            "matches": [
                "https://accounts.booth.pm/*"
            ],
            "resources": [
                "src/content.js",
                "src/*.map"
            ]
        }
    ]
}